{
    "rewrites": [
        {
            "source": "/api/ai/:path*",
            "destination": "https://koyjabo-backend.onrender.com/api/ai/:path*"
        },
        {
            "source": "/api/routes/:path*",
            "destination": "https://koyjabo-backend.onrender.com/api/routes/:path*"
        },
        {
            "source": "/api/trains/:path*",
            "destination": "https://koyjabo-backend.onrender.com/api/trains/:path*"
        },
        {
            "source": "/api/notifications/:path*",
            "destination": "https://koyjabo-backend.onrender.com/api/notifications/:path*"
        },
        {
            "source": "/api/stats",
            "destination": "https://koyjabo-backend.onrender.com/api/stats"
        }
    ],
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "framework": "vite",
    "headers": [
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.(?:jpg|jpeg|png|gif|webp|svg|ico)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/(.*)\\.(?:js|css)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        },
        {
            "source": "/sw.js",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "/(.*)\\.html",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=300, must-revalidate"
                }
            ]
        },
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Robots-Tag",
                    "value": "index, follow"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "camera=(), microphone=(), geolocation=(self)"
                }
            ]
        }
    ],
    "routes": [
        {
            "src": "/api/shohoz-proxy",
            "dest": "https://webapi.shohoz.com/v1.0/web/booking/bus/search-trips"
        },
        {
            "src": "/api/ai/(.*)",
            "dest": "https://koyjabo-backend.onrender.com/api/ai/$1"
        },
        {
            "src": "/api/routes/(.*)",
            "dest": "https://koyjabo-backend.onrender.com/api/routes/$1"
        },
        {
            "src": "/intercity",
            "dest": "/intercity/index.html"
        },
        {
            "src": "/intercity/(.*)",
            "dest": "/intercity/$1"
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "git": {
        "deploymentEnabled": {
            "main": true,
            "gh-pages": false
        }
    }
}